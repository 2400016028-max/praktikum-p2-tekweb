  <!-- Small JavaScript for interactivity -->
  <script>
    // isi tahun otomatis
    document.getElementById('year').textContent = new Date().getFullYear();

    // tombol demo
    document.getElementById('btnDemo').addEventListener('click', function(){
      alert('Halo! Ini contoh interaksi sederhana. Selamat bereksperimen!');
    });

    // form submit (tidak mengirim, hanya demo)
    document.getElementById('contactForm').addEventListener('submit', function(e){
      e.preventDefault();
      const name = document.getElementById('name').value.trim();
      const email = document.getElementById('email').value.trim();
      document.getElementById('formResult').textContent = `Terima kasih, ${name}! Pesan Anda akan diproses (demo). Kami mengirim notifikasi ke ${email}.`;
      this.reset();
    });
  </script>
